
@model IEnumerable<Graduation_Project.Models.Product>


@{
    ViewBag.Title = "Suggestion";
}

<h1 style="color:teal">Suggestion</h1>


@using (Html.BeginForm("Suggestion", "Products", FormMethod.Post))

{
     @Html.AntiForgeryToken()

    @*@Html.DropDownList("catId", ViewData["CategoryId"] as SelectList, "Select a Category", new { @name = "catId", id = "catId" })
    @Html.DropDownList("genderId", ViewData["GenderId"] as SelectList, "Select Gender", new { @name = "genderId", id = "genderId" })*@

    @Html.DropDownList("ProducttypeId", TempData["ProducttypeId"] as SelectList)
    @Html.DropDownList("GenderId", TempData["GenderId"] as SelectList)
    @Html.DropDownList("ColorId", TempData["ColorId"] as SelectList)

    <input style="padding:5px;margin:5px; width:100px ;color:white;background-color:teal;" 
           type="submit" value="Search"  class="btn btn-default" />
}
       

<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.size)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
        </th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.size)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Price)  EGP
                </td>
                <td>
                    <img src="~/Images/@Html.DisplayFor(Model=> item.Image)"
                         class="rounded"
                         style="width:200px;height:250px;" />
                </td>
                <td>
                    @Html.ActionLink("Add", "Details", "Home", new { Model = item.Id }, new { @class = "btn btn-warning", @style = "width:200px;" })
                </td>

  
            </tr>
        }
    }
    
</table>